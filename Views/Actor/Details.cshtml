@model IntroToLINQandASPLabs.Models.Actor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

@if(Model== null)
{
    <h3>Actor not Found</h3>
} else
{
    


<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalEarned)
        </dt>
        <dd class = "col-sm-10">
            <span>$</span>
            @Html.DisplayFor(model => model.TotalEarned)
            <span>Million</span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumOfRoles)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumOfRoles)
        </dd>
    </dl>

</div>
<div>
    
        
        @if(Model.Roles.Count > 0)
        {
            <h4>Roles</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                           @Html.DisplayNameFor(model => model.Roles.First().Movie.Title)
                        </th>
                        <th>
                            
                            @Html.DisplayNameFor(model => model.Roles.First().Title)
                        </th>
                        <th>
                            
                            @Html.DisplayNameFor(model => model.Roles.First().Salary)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Role role in Model.Roles)
                    {
                        <tr>
                            <td>
                            <a asp-controller="Movie" asp-action="GetMovieInfo" asp-route-movieid="@role.Movie.Id">@role.Movie.Title</a>
                            </td>
                            <td>
                                @role.Title
                            </td>
                            <td>
                                <span>$</span>@role.Salary <span>Million</span>
                            </td>
                        </tr>
                
                    }
                </tbody>
            </table>
            
        }

</div>
<div>
        @if(Model.Ratings.Count > 0)
        {
            <h4>Ratings</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ratings.First().User.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ratings.First().Score)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ratings.First().Comment)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Rating rating in Model.Ratings)
                    {
                        <tr>
                            <td>
                                @rating.User.Name
                            </td>
                            <td>
                                @rating.Score
                            </td>
                            
                            @if (String.IsNullOrEmpty(rating.Comment))
                            {
                                <td>No Comment</td>
                            } else
                            {
                                <td>
                                    @rating.Comment
                                </td>
                            }
                            
                        </tr>
                    }
                </tbody>
            </table>
            
        }
</div>
}
<div>
    
    <a asp-action="Index">Back to List</a> | 
    @if (Model != null)
    {
        <a asp-controller="Rating" asp-action="Create" asp-route-id="@Model.Id" asp-route-isActor="true">Rate @Model.Name</a>
    }
</div>
